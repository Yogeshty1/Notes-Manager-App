{
	"version": 2,
	"builds": [
		{
			"src": "api/index.js",
			"use": "@vercel/node"
		},
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "build"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/api/index.js"
		},
		{
			"src": "/(.*)",
			"dest": "/client/$1"
		}
	]
}

const API_BASE_URL = "/api";

export const fetchNotes = async () => {
    const response = await fetch(`${API_BASE_URL}/notes`);
    return response.json();
};

